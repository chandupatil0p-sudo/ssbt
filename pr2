%{
#include <stdio.h>
#include <math.h>

FILE *fp;
%}

Binary     [0-1]+
Oct        [0-7]+
Dec        [0-9]+
Hex        [0-9A-Fa-f]+
Positive   \+?[1-9][0-9]*
Negative   -[1-9][0-9]*
PositiveF  \+?[1-9][0-9]*\.[0-9]+
NegativeF  -[1-9][0-9]*\.[0-9]+
Exponent   [-+]?[0-9]*\.?[0-9]+([eE][-+]?[0-9]+)?

%%

{Binary}      { printf("This is a Binary number: %s\n", yytext); }
{Oct}         { printf("This is an Octal number: %s\n", yytext); }
{Dec}         { printf("This is a Decimal number: %s\n", yytext); }
{Hex}         { printf("This is a Hexadecimal number: %s\n", yytext); }
{Positive}    { printf("This is a Positive Integer: %s\n", yytext); }
{Negative}    { printf("This is a Negative Integer: %s\n", yytext); }
{PositiveF}   { printf("This is a Positive Float: %s\n", yytext); }
{NegativeF}   { printf("This is a Negative Float: %s\n", yytext); }
{Exponent}    { printf("This is an Exponential number: %s\n", yytext); }

.|\n          { /* Ignore other characters */ }

%%

int main(int argc, char *argv[])
{
    if (argc < 2) {
        printf("Usage: %s <input_file>\n", argv[0]);
        return 1;
    }

    fp = fopen(argv[1], "r");
    if (fp == NULL) {
        perror("Error opening file");
        return 1;
    }

    yyin = fp;
    yylex();

    fclose(fp);
    return 0;
}
