library(shiny)

ui <- fluidPage(
  titlePanel("Welcome to My First Shiny App"),  
  sidebarLayout(
    sidebarPanel(
      h3("Enter Your Name"),
      textInput("name", "Your Name:", ""),  
      actionButton("submit", "Submit")     
    ),
    mainPanel(
      h3("Greeting Message"),
      textOutput("greet")                   
    )
  )
)

server <- function(input, output) {
  observeEvent(input$submit, {
    user_name <- input$name
    if (user_name == "") {
      msg <- "Please enter your name above!"
    } else {
      msg <- paste("Hello,", user_name, "! Welcome to the Shiny app")
    }
    output$greet <- renderText({ msg })
  })
}

 
shinyApp(ui = ui, server = server)
